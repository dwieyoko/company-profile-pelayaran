<svg width="1200" height="600" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="heroGrad1" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#0c4a6e;stop-opacity:1" />
      <stop offset="30%" style="stop-color:#1e3a8a;stop-opacity:1" />
      <stop offset="70%" style="stop-color:#3b82f6;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#0ea5e9;stop-opacity:1" />
    </linearGradient>
    <pattern id="heroWaves1" x="0" y="0" width="150" height="40" patternUnits="userSpaceOnUse">
      <path d="M0,20 Q37.5,5 75,20 T150,20 V40 H0 Z" fill="rgba(255,255,255,0.08)"/>
    </pattern>
    <pattern id="heroWaves2" x="0" y="0" width="200" height="30" patternUnits="userSpaceOnUse">
      <path d="M0,15 Q50,0 100,15 T200,15 V30 H0 Z" fill="rgba(255,255,255,0.05)"/>
    </pattern>
  </defs>
  <rect width="100%" height="100%" fill="url(#heroGrad1)"/>
  <rect width="100%" height="100%" fill="url(#heroWaves1)"/>
  <rect width="100%" height="100%" fill="url(#heroWaves2)" transform="translate(0,50)"/>

  <!-- Large Tug Boat -->
  <g transform="translate(750, 350)" opacity="0.4">
    <rect x="0" y="0" width="300" height="60" fill="rgba(255,255,255,0.6)" rx="30"/>
    <rect x="80" y="-40" width="60" height="40" fill="rgba(255,255,255,0.6)" rx="8"/>
    <rect x="200" y="-60" width="30" height="60" fill="rgba(255,255,255,0.6)" rx="5"/>
    <rect x="120" y="-20" width="20" height="20" fill="rgba(255,255,255,0.8)" rx="10"/>
    <rect x="160" y="-20" width="20" height="20" fill="rgba(255,255,255,0.8)" rx="10"/>
  </g>

  <!-- Smaller Ships in Background -->
  <g transform="translate(900, 200)" opacity="0.2">
    <rect x="0" y="0" width="120" height="25" fill="rgba(255,255,255,0.5)" rx="12"/>
    <rect x="30" y="-15" width="20" height="15" fill="rgba(255,255,255,0.5)" rx="3"/>
  </g>

  <!-- Port Cranes -->
  <g transform="translate(1000, 150)" opacity="0.25">
    <rect x="0" y="0" width="8" height="200" fill="rgba(255,255,255,0.5)"/>
    <rect x="-30" y="20" width="70" height="8" fill="rgba(255,255,255,0.5)"/>
    <rect x="50" y="0" width="8" height="180" fill="rgba(255,255,255,0.5)"/>
    <rect x="20" y="30" width="70" height="8" fill="rgba(255,255,255,0.5)"/>
  </g>

  <!-- Main Content -->
  <text x="350" y="220" font-family="Arial, sans-serif" font-size="56" font-weight="bold"
        fill="white" text-anchor="middle" opacity="0.95">SOLUSI PELAYARAN</text>
  <text x="350" y="280" font-family="Arial, sans-serif" font-size="56" font-weight="bold"
        fill="white" text-anchor="middle" opacity="0.95">TERPERCAYA</text>
  <text x="350" y="330" font-family="Arial, sans-serif" font-size="20"
        fill="white" text-anchor="middle" opacity="0.85">Melayani jasa Tug & Barge dan penyewaan kapal</text>
  <text x="350" y="355" font-family="Arial, sans-serif" font-size="20"
        fill="white" text-anchor="middle" opacity="0.85">dengan standar keselamatan tinggi</text>

  <!-- Decorative Elements -->
  <circle cx="150" cy="150" r="60" fill="none" stroke="rgba(255,255,255,0.15)" stroke-width="2"/>
  <circle cx="200" cy="500" r="40" fill="none" stroke="rgba(255,255,255,0.1)" stroke-width="1"/>
</svg>
