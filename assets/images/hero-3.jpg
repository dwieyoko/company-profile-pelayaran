<svg width="1200" height="600" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="heroGrad3" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#1e40af;stop-opacity:1" />
      <stop offset="30%" style="stop-color:#1e3a8a;stop-opacity:1" />
      <stop offset="70%" style="stop-color:#0c4a6e;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#164e63;stop-opacity:1" />
    </linearGradient>
    <pattern id="hero3Waves1" x="0" y="0" width="160" height="32" patternUnits="userSpaceOnUse">
      <path d="M0,16 Q40,6 80,16 T160,16 V32 H0 Z" fill="rgba(255,255,255,0.07)"/>
    </pattern>
  </defs>
  <rect width="100%" height="100%" fill="url(#heroGrad3)"/>
  <rect width="100%" height="100%" fill="url(#hero3Waves1)"/>
  
  <!-- Port Scene -->
  <g transform="translate(700, 300)" opacity="0.4">
    <!-- Main Dock -->
    <rect x="0" y="50" width="400" height="20" fill="rgba(255,255,255,0.5)" rx="2"/>
    
    <!-- Ships at dock -->
    <rect x="50" y="30" width="120" height="30" fill="rgba(255,255,255,0.6)" rx="15"/>
    <rect x="80" y="10" width="30" height="20" fill="rgba(255,255,255,0.6)" rx="3"/>
    <rect x="120" y="5" width="20" height="25" fill="rgba(255,255,255,0.6)" rx="2"/>
    
    <rect x="200" y="25" width="140" height="35" fill="rgba(255,255,255,0.6)" rx="17"/>
    <rect x="240" y="5" width="35" height="20" fill="rgba(255,255,255,0.6)" rx="3"/>
    <rect x="290" y="0" width="25" height="25" fill="rgba(255,255,255,0.6)" rx="2"/>
  </g>
  
  <!-- Cranes -->
  <g transform="translate(850, 80)" opacity="0.35">
    <rect x="0" y="0" width="10" height="200" fill="rgba(255,255,255,0.6)"/>
    <rect x="-50" y="25" width="110" height="10" fill="rgba(255,255,255,0.6)"/>
    <rect x="80" y="0" width="10" height="180" fill="rgba(255,255,255,0.6)"/>
    <rect x="30" y="35" width="110" height="10" fill="rgba(255,255,255,0.6)"/>
    <rect x="160" y="0" width="10" height="160" fill="rgba(255,255,255,0.6)"/>
    <rect x="110" y="45" width="110" height="10" fill="rgba(255,255,255,0.6)"/>
  </g>
  
  <!-- Containers -->
  <g transform="translate(750, 400)" opacity="0.3">
    <rect x="0" y="0" width="30" height="20" fill="rgba(255,255,255,0.6)" rx="2"/>
    <rect x="35" y="0" width="30" height="20" fill="rgba(255,255,255,0.6)" rx="2"/>
    <rect x="70" y="0" width="30" height="20" fill="rgba(255,255,255,0.6)" rx="2"/>
    <rect x="15" y="-20" width="30" height="20" fill="rgba(255,255,255,0.7)" rx="2"/>
    <rect x="50" y="-20" width="30" height="20" fill="rgba(255,255,255,0.7)" rx="2"/>
  </g>
  
  <!-- Main Content -->
  <text x="350" y="200" font-family="Arial, sans-serif" font-size="56" font-weight="bold" 
        fill="white" text-anchor="middle" opacity="0.95">LAYANAN</text>
  <text x="350" y="260" font-family="Arial, sans-serif" font-size="56" font-weight="bold" 
        fill="white" text-anchor="middle" opacity="0.95">PROFESIONAL</text>
  <text x="350" y="310" font-family="Arial, sans-serif" font-size="20" 
        fill="white" text-anchor="middle" opacity="0.85">Solusi logistik maritim terpadu</text>
  <text x="350" y="335" font-family="Arial, sans-serif" font-size="20" 
        fill="white" text-anchor="middle" opacity="0.85">untuk kebutuhan industri Anda</text>
  
  <!-- Decorative Elements -->
  <circle cx="100" cy="100" r="45" fill="none" stroke="rgba(255,255,255,0.15)" stroke-width="2"/>
  <circle cx="1100" cy="500" r="30" fill="none" stroke="rgba(255,255,255,0.1)" stroke-width="1"/>
  <circle cx="150" cy="450" r="20" fill="none" stroke="rgba(255,255,255,0.08)" stroke-width="1"/>
  
  <!-- Additional wave pattern -->
  <path d="M0,550 Q300,530 600,550 T1200,550" stroke="rgba(255,255,255,0.1)" stroke-width="2" fill="none"/>
</svg>
